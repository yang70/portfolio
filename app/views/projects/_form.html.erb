<%= form_for @project, remote: true do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited
                                            this project from being saved:</h2>

      <ul class="field_with_errors">
      <%= @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, placeholder: "Name" %>
  </div>
  <div class="field">
    <%= f.label :technologies_used %><br />
    <%= f.text_area :technologies_used, size: "30x10", placeholder: "Technologies Used" %>
  </div>
  <div class="field">
    <%= f.label :image_url %>(optional)<br />
    <%= f.text_field :image_url %>
  </div>

  <div class="field">
    <%= f.label :source_url %>(optional)<br />
    <%= f.text_field :source_url %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
