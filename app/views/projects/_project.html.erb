<div class="col-md-4 thing_container" id="<%= dom_id(project) %>">
  <a href="/projects/<%= project.id %>">
    <% if project.image_url.present? %>
      <%= image_tag project.image_url , class: "thing_pic" %>
    <% else %>
      <img class="thing_pic" src="https://s3.amazonaws.com/matthewgyang/images/headshot_square.png" alt="headshot">
    <% end %>
    <h3><%= project.name %></h3>
    <% if policy(project).create? %>
      <%= link_to 'Edit', edit_project_path(project), remote: true %> |
      <%= link_to 'Destroy', project, method: :delete,
                                    data: { confirm: 'Are you sure?' }, remote: true %>
    <% end %>
  </a>
</div>
