<div id="recent-blog" class="container">
  <div class="icon-container icon-secondary">
    <i class="fa fa-quote-left fa-4x"><a class="section-header" href="/articles">Blog</a></i>
  </div>
  <% @articles.each do |article| %>
    <div class="col-md-4">
      <div class="thing_container">
          <a href="/articles/<%= article.id %>">
            <% if article.picture.present? %>
              <%= image_tag article.picture.url, class: "thing_pic" %>
            <% else %>
              <img class="thing_pic" src="https://s3.amazonaws.com/matthewgyang/images/headshot_square.png" alt="headshot">
            <% end %>
            <div class='description'>
              <p class='description-content'><%= article.title %></p>
            </div>
            <div class='hover-description'>
              <p class='hover-title'><strong><%= article.title %></strong></p>
              <hr />
              <p><%= article.description %></p>
            </div>
          </a>
      </div>
    </div>
  <% end %>
</div>
