<div id="portfolio-container" class="container">
  <div class="icon-container icon-secondary">
    <i class="fa fa-code-fork fa-3x"><a class="section-header" href="/projects">Projects</a></i>
  </div>
  <a name="portfolio"></a>
  <div class="col-md-12 hidden-xs hidden-sm">
  <% @projects.each do |project| %>
    <div class="col-md-4">
      <div class="thing_container">
        <a href="/projects/<%= project.id %>">
          <% if project.image_url.present? %>
            <%= image_tag project.image_url , class: "project_pic" %>
          <% else %>
            <img class="project_pic" src="https://s3.amazonaws.com/matthewgyang/images/headshot_square.png" alt="headshot">
          <% end %>
          <div class='description'>
            <p class='description-content'><%= project.name %></p>
          </div>
          <div class='hover-description'>
            <p class='hover-title'><strong><%= project.name %></strong></p>
            <hr />
            <p><%= project.description %></p>
            <p><em><%= project.created_at.strftime("%m-%d-%Y") %></em></p>
          </div>
        </a>
      </div>
    </div>
  <% end %>
  </div>
  <div class="col-sm-12 visible-xs visible-sm">
    <div class="thing_container">
      <a href="/projects/<%= @projects[0].id %>">
        <% if @projects[0].image_url.present? %>
          <%= image_tag @projects[0].image_url , class: "project_pic" %>
        <% else %>
          <img class="project_pic" src="https://s3.amazonaws.com/matthewgyang/images/headshot_square.png" alt="headshot">
        <% end %>
        <div class='description'>
          <p class='description-content'><%= @projects[0].name %></p>
        </div>
        <div class='hover-description'>
          <p class='hover-title'><strong><%= @projects[0].name %></strong></p>
          <hr />
          <p><%= @projects[0].description %></p>
          <p><em><%= @projects[0].created_at.strftime("%m-%d-%Y") %></em></p>
        </div>
      </a>
    </div>
  </div>
  <div class="col-md-12 text-center">
    <a href="/projects"><h4><em>More</em></h4></a>
  </div>
</div>
