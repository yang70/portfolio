<hr>
<div id="portfolio" class="container">
  <h3><a class="section-header" href="/projects">Portfolio</a></h3>
  <a name="portfolio"></a>
  <% @projects.each do |project| %>
    <div class="col-md-4 thing_container">
      <a href="/projects/<%= project.id %>">
      <% if project.image_url.present? %>
        <%= image_tag project.image_url , class: "thing_pic" %>
      <% else %>
        <img class="thing_pic" src="https://s3.amazonaws.com/matthewgyang/images/headshot_square.png" alt="headshot">
      <% end %>
      <h4><%= project.name %></h4>
      </a>
    </div>
  <% end %>
</div>
